@model CodeSnippet

<form method="post">
    <div class="border p-4 mt-4 rounded bg-light">
        <h2 class="text-primary">Add a New Code Snippet</h2>
        <hr />
        <div class="form-group mb-3">
            <label asp-for="Title" class="form-label"><i class="bi bi-card-text"></i> Snippet Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter a descriptive title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Language" class="form-label"><i class="bi bi-code-slash"></i> Programming Language</label>
            <select asp-for="Language" class="form-control">
                <option value="">Select a Language</option>
                <option value="Java">Java</option>
                <option value="C#">C#</option>
                <option value="Python">Python</option>
            </select>
            <span asp-validation-for="Language" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Code" class="form-label"><i class="bi bi-file-code"></i> Code Snippet</label>
            <textarea asp-for="Code" class="form-control" rows="10" placeholder="Paste your code here..."></textarea>
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class="col">
                <label asp-for="CreatedDate" class="form-label"><i class="bi bi-calendar"></i> Created Date</label>
                <input asp-for="CreatedDate" class="form-control" type="date" required/>
                <span asp-validation-for="CreatedDate" class="text-dander"></span>
            </div>
            <div class="col">
                <label asp-for="UpdatedDate" class="form-label"><i class="bi bi-calendar"></i> Updated Date</label>
                <input asp-for="UpdatedDate" class="form-control" />
            </div>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-success" style="width:150px">Save</button>
            <a asp-controller="CodeSnippet" asp-action="Index" class="btn btn-secondary" style="width:150px">Cancel</a>
        </div>
    </div>
</form>
