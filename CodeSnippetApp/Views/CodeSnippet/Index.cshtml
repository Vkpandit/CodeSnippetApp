@model IEnumerable<CodeSnippet>

@{ 
    ViewData["Title"] = "Code Snippet Manager";
}

<parial name="_Notification"/>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <u><h2 class="text-primary">Code Snippet List</h2></u>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="CodeSnippet" asp-action="Create" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i>&nbsp;
                Add Code Snippet
            </a>
        </div>
    </div>
    <div class="border p-3 mt-4">
        <table class="table table-bordered table-striped" style="width:100%">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Title</th>
                    <th>Language</th>
                    <th>Created Date</th>
                    <th>Updated Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                        <tr>
                            <td>@obj.Title</td>
                            <td>@obj.Language</td>
                            <td>@obj.CreatedDate.ToString("dd MMM yyyy")</td>
                            <td>@obj.UpdatedDate?.ToString("dd MMM yyyy")</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-controller="CodeSnippet" asp-action="Views" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a asp-controller="CodeSnippet" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
