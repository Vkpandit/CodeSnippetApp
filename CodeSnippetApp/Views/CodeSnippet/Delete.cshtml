@model CodeSnippet

<form method="post" asp-action="Delete">
    <input asp-for="Id" type="hidden" />
    <div class="border p-4 mt-4 rounded bg-light">
        <h2 class="text-danger">Delete Code Snippet</h2>
        <hr />
        <p class="lead">Are you sure you want to delete this code snippet?</p>

        <div class="form-group mb-3">
            <label asp-for="Title" class="form-label"><i class="bi bi-card-text"></i> Snippet Title</label>
            <input asp-for="Title" class="form-control" disabled />
        </div>

        <div class="form-group mb-3">
            <label asp-for="Language" class="form-label"><i class="bi bi-code-slash"></i> Programming Language</label>
            <input asp-for="Language" class="form-control" disabled />
        </div>

        <div class="form-group row mb-3">
            <div class="col">
                <label asp-for="CreatedDate" class="form-label"><i class="bi bi-calendar"></i> Created Date</label>
                <input asp-for="CreatedDate" class="form-control" disabled />
            </div>
            <div class="col">
                <label asp-for="UpdatedDate" class="form-label"><i class="bi bi-calendar"></i> Updated Date</label>
                <input asp-for="UpdatedDate" class="form-control" disabled />
            </div>
        </div>

        <div class="form-group mb-4">
            <label asp-for="Code" class="form-label"><i class="bi bi-file-code"></i> Code Snippet</label>
            <textarea asp-for="Code" class="form-control" rows="10" disabled></textarea>
        </div>

        <div class="mt-4">
            <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
            <a asp-controller="CodeSnippet" asp-action="Index" class="btn btn-secondary" style="width:150px">Cancel</a>
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}